{
  "name": "bitcoin-hd",
  "description": "Bitcoin wallet",
  "version": "0.0.0",
  "license": "MIT",
  "main": "lib/index.js",
  "bin": {
    "bitcoin-hd": "./bin/bitcoin-hd.js"
  },
  "dependencies": {
    "caporal": "0.7.0"
  },
  "devDependencies": {
    "editorconfig-tools": "0.1.1",
    "husky": "0.14.3",
    "jest": "21.0.2",
    "lint-staged": "4.1.3",
    "prettier-standard": "6.0.0",
    "snazzy": "7.0.0",
    "standard": "10.0.3"
  },
  "lint-staged": {
    "*.{cmd,html,json,md,sh,txt,xml,yml}": [
      "editorconfig-tools fix",
      "git add"
    ],
    "*.js": [
      "prettier-standard && standard --fix",
      "git add"
    ]
  },
  "scripts": {
    "lint": "standard --verbose | snazzy",
    "test": "jest --coverage",
    "ci": "jest --watch",
    "precommit": "lint-staged",
    "prepush": "jest"
  }
}
